  Path:       src/
  BuildTools: ocamlbuild
  Modules:    Mesh_triangle
  CSources:   triangle/triangle.c
  CCOpt:      -DTRILIBRARY -DEXTERNAL_TEST
  BuildDepends: mesh
  FindlibName:   triangle
  FindlibParent: mesh

